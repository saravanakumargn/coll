{#{% form_theme form 'TrackerUserBundle:Form:fields.html.twig' %}#}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3>Change your password</h3>
                    <div class="col-md-6 col-md-offset-3">
                        <div class="spacer-height-sm"></div>
                        
                        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                            {{ form_start(form) }}
                            {{ form_widget(form._token) }}
                            {% if not form.vars.valid %}
                                <div class="alert alert-danger" role="alert">
                                    {{ form_errors(form.new.first) }}
                                    {{ form_errors(form.new.second) }}
                                </div>
                            {% endif %}
                            {#        {{ form_widget(form) }}#}
                            <div class="form-group">
                                {{ form_widget(form.new.first, {'attr': {'class': 'form-control','placeholder':'Password'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.new.second, {'attr': {'class': 'form-control','placeholder':'Retype Password'}}) }}         
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <md-button type="submit" class="md-raised md-primary">Change password</md-button>
                                    {#<input type="submit" value="{{ 'resetting.reset.submit'|trans }}"
                                           class="btn btn-primary"/>#}
                                </div>
                            </div>
                        </form>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
