{% extends 'base.html.twig' %}

{% block body %}
    <h1>Branches list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Branchnameta</th>
                <th>Branchnameen</th>
                <th>Branchcode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td><a href="{{ path('branch_show', { 'id': branch.id }) }}">{{ branch.id }}</a></td>
                <td>{{ branch.branchNameTa }}</td>
                <td>{{ branch.branchNameEn }}</td>
                <td>{{ branch.branchCode }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('branch_show', { 'id': branch.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('branch_edit', { 'id': branch.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('branch_new') }}">Create a new branch</a>
        </li>
    </ul>
{% endblock %}
