{% extends '::base-admin.html.twig' %}
{#{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}#}
{% block react_block %}


    <script src="{{ asset('assets/scripts/admin-page/maps.js') }}?v={{ date().timestamp }}"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCv971y_AIFpzg12MG8BMIKViXKM12mc5I&libraries=places&callback=initMap"
    async defer></script>
    <!-- Angular Material requires Angular.js Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
    <script src="{{ asset('assets/scripts/admin-page/index.js') }}?v={{ date().timestamp }}"></script>
    {#    <script src="{{ asset('assets/scripts/admin-page/scripts.js') }}?v={{ date().timestamp }}"></script>#}

{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>College creation</h1>
    </section>
    {#<section class="content" ng-app="weddingApp" ng-controller="VendorNewCtrl"
                 {% if id is defined %}data-ng-init="editData('{{id}}', {{pageContent|json_encode()}})"{% else %} data-ng-init="newData({{pageContent|json_encode()}})"{% endif %}>    #}
    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <div class="box box-success">
                    <div class="box-body">
                        <section style="height: 500px; width: 100%;">
                            <input id="pac-input" class="controls" type="text"
                                   placeholder="Enter the collage name">
                            <div id="map"></div>
                            <div id="infowindow-content">
                                <span id="place-name"  class="title"></span><br>
                                Place ID <span id="place-id"></span><br>
                                <span id="place-address"></span>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <section  ng-app="studyApp" ng-controller="CourceController as vm" ng-cloak
                  data-ng-init="newData({{allBranches|json_encode()}})">
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-success">
                        <div class="box-header">
                            <i class="fa fa-edit"></i>
                            <h3 class="box-title">Auto Fill Details</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label>College name</label>
                                <input type="text" id="college_name" class="form-control" placeholder="College name"/>
                            </div>
                            <div class="form-group">
                                <label>Page URL</label>
                                <input id="pageUrl" type="text" class="form-control" placeholder="Page URL" ng-model="cource.vendor_name">
                            </div>

                            <div class="form-group">
                                <label>Full address</label>
                                <textarea id="full_address" class="form-control" rows="2" placeholder="Full address"></textarea>
                            </div>
                            <div class="form-group">
                                <label>District</label>
                                <input type="text" id="district" class="form-control" placeholder="District" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Pincode</label>
                                <input type="text" id="pincode" class="form-control" placeholder="Pincode" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Latitude</label>
                                <input type="text" id="lat" class="form-control" placeholder="Latitude" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Longitude</label>
                                <input type="text" id="lng" class="form-control" placeholder="Longitude" ng-model="cource.vendor_name">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box box-success">
                        <div class="box-header">
                            <i class="fa fa-edit"></i>
                            <h3 class="box-title">Details</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label>TNEA Code</label>
                                <input type="number" class="form-control" placeholder="TNEA Code"/>
                            </div>                          
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" placeholder="Phone" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Fax No</label>
                                <input type="text" class="form-control" placeholder="Fax no" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Email-Id</label>
                                <input type="text" class="form-control" placeholder="Email-Id" ng-model="cource.vendor_name">
                            </div>
                            <div class="form-group">
                                <label>Website</label>
                                <input type="text" class="form-control" placeholder="Website" ng-model="cource.vendor_name">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">Active</label>
                            </div>                        
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
<div class="col-md-6">
    </div>
                <div class="col-md-6">
                    <div class="box box-info">
                        <div class="box-header">
                            <i class="fa fa-edit"></i>
                            <h3 class="box-title">Branches</h3>
                        </div>
                        <div class="box-body">  
                            <md-button class="md-raised md-primary">Primary</md-button>
                                {#<div class="form-group">
                                    <label>Branches List</label>
                                    <md-autocomplete
                                        md-selected-item="vm.selectedItem"
                                        md-search-text="vm.searchText"
                                        md-selected-item-change="vm.selectedItemChange(item)"
                                        md-items="item in vm.querySearch(vm.searchText)"
                                        md-item-text="item.bn"
                                        md-min-length="0"
                                        placeholder="Pick an Angular repository"
                                        md-menu-class="autocomplete-custom-template">
                                        <md-item-template>
                                            <span class="item-title">
                                                <span> [[item.bn]] </span>
                                            </span>
                                            <span class="item-metadata">
                                                <span>
                                                    <strong>[[item.bc]]</strong>
                                                </span>
                                            </span>                                        
                                        </md-item-template>
                                    </md-autocomplete>
                                </div>#}
                            <div>
                                <fieldset class="standard" ng-repeat="branch in vm.cource.branchModal track by $index">
                                    <legend>Branch [[$index + 1]]</legend>

                                    [[branch]]                                        
                                    <md-autocomplete
                                        md-selected-item="branch.course"
                                        md-search-text="vm['searchText' + $index]"
                                        md-selected-item-change="vm.selectedItemChange(item, $index)"
                                        md-items="item in vm.querySearch(vm['searchText' + $index])"
                                        md-item-text="item.bn"
                                        md-min-length="0"
                                        placeholder="Pick an Angular repository"
                                        md-menu-class="autocomplete-custom-template">
                                        <md-item-template>
                                            <span class="item-title">
                                                <span> [[item.bn]] </span>
                                            </span>
                                            <span class="item-metadata">
                                                <span>
                                                    <strong>[[item.bc]]</strong>
                                                </span>
                                            </span>                                        
                                        </md-item-template>
                                    </md-autocomplete>
                                    <br/>
                                    <md-input-container class="md-block" flex-gt-sm>
                                        <label>Approved Intake(Seats)</label>
                                        <input ng-model="user.firstName">
                                    </md-input-container>
                                    <md-input-container class="md-block" flex-gt-sm>
                                        <label>Year of Starting of Course</label>
                                        <input ng-model="branch.st">
                                    </md-input-container>
                                </fieldset>
                                <div class="form-group">
                                    <input type="button" class="btn btn-primary" value="Add Branch" ng-click="vm.addBranch()"/>
                                </div>
                            </div>
                        </div>
                    </div>   
                    <div class="col-md-6">

                    </div>
                </div>
                {# {{ dump(college) }}
                 {{ dump(allBranches) }}#}
        </section>
        <section>
            <div  style="margin-top:250px;">
            </div>
        </section>
    </section>

{% endblock %}

{% block style_block %}

    <style>
        #map,body,html{height:100%}body,html{margin:0;padding:0}.controls{background-color:#fff;border-radius:2px;border:1px solid transparent;box-shadow:0 2px 6px rgba(0,0,0,.3);box-sizing:border-box;font-family:Roboto;font-size:15px;font-weight:300;height:29px;margin-left:17px;margin-top:10px;outline:0;padding:0 11px 0 13px;text-overflow:ellipsis;width:400px}.controls:focus{border-color:#4d90fe}.title{font-weight:700}#infowindow-content{display:none}#map #infowindow-content{display:inline}
    </style>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <style>
        .autocomplete-custom-template li {
            border-bottom: 1px solid #ccc;
            height: auto;
            padding-top: 8px;
            padding-bottom: 8px;
            white-space: normal;
        }
        .autocomplete-custom-template li:last-child {
            border-bottom-width: 0;
        }
        .autocomplete-custom-template .item-title,
        .autocomplete-custom-template .item-metadata {
            display: block;
            line-height: 2;
        }
        .autocomplete-custom-template .item-title md-icon {
            height: 18px;
            width: 18px;
        }
    </style>
{% endblock %}
