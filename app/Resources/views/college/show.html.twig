{% extends '::base-admin.html.twig' %}

{% block body -%}
    <section class="content-header">
        <h1>College</h1>
    </section>
    <ul>
        <li>
            <a href="{{ path('district_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="fa fa-edit"></i>
                        <h3 class="box-title">New District</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ college.id }}</td>
                                </tr>
                                <tr>
                                    <th>Collegename</th>
                                    <td>{{ college.collegeName }}</td>
                                </tr>
                                <tr>
                                    <th>Tneacode</th>
                                    <td>{{ college.tneaCode }}</td>
                                </tr>
                                <tr>
                                    <th>Pageurl</th>
                                    <td>{{ college.pageUrl }}</td>
                                </tr>
                                <tr>
                                    <th>Addressta</th>
                                    <td>{{ college.addressTa }}</td>
                                </tr>
                                <tr>
                                    <th>Addressen</th>
                                    <td>{{ college.addressEn }}</td>
                                </tr>
                                <tr>
                                    <th>Pincode</th>
                                    <td>{{ college.pincode }}</td>
                                </tr>
                                <tr>
                                    <th>Phoneno</th>
                                    <td>{{ college.phoneNo }}</td>
                                </tr>
                                <tr>
                                    <th>Faxno</th>
                                    <td>{{ college.faxNo }}</td>
                                </tr>
                                <tr>
                                    <th>Email_id</th>
                                    <td>{{ college.emailid }}</td>
                                </tr>
                                <tr>
                                    <th>Websitename</th>
                                    <td>{{ college.websiteName }}</td>
                                </tr>
                                <tr>
                                    <th>Hqdistance</th>
                                    <td>{{ college.hqDistance }}</td>
                                </tr>
                                <tr>
                                    <th>Railwaynear</th>
                                    <td>{{ college.railwayNear }}</td>
                                </tr>
                                <tr>
                                    <th>Railwaydistance</th>
                                    <td>{{ college.railwayDistance }}</td>
                                </tr>
                                <tr>
                                    <th>Lat</th>
                                    <td>{{ college.lat }}</td>
                                </tr>
                                <tr>
                                    <th>Lng</th>
                                    <td>{{ college.lng }}</td>
                                </tr>
                                <tr>
                                    <th>Isactive</th>
                                    <td>{% if college.isActive %}Yes{% else %}No{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Isblocked</th>
                                    <td>{% if college.isBlocked %}Yes{% else %}No{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Modifiedon</th>
                                    <td>{% if college.modifiedon %}{{ college.modifiedon|date('Y-m-d H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Createdon</th>
                                    <td>{% if college.createdon %}{{ college.createdon|date('Y-m-d H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Viewed</th>
                                    <td>{{ college.viewed }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <ul class="record_actions">
                            <li>
                                <a href="{{ path('college_index') }}">Back to the list</a>
                            </li>
                            <li>
                                <a href="{{ path('college_edit', { 'id': college.id }) }}">Edit</a>
                            </li>
                            {#    <li>{{ form(delete_form) }}</li>#}
                        </ul>
                        {#    <!-- Button trigger modal -->#}
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                            Delete Item
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Delete Item</h4>
                </div>
                <div class="modal-body">
                    {{ form(delete_form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    {#                    <button type="button" class="btn btn-primary">Save changes</button>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
