{% extends '::base-admin.html.twig' %}

{% block body -%}
    <section class="content-header">
        <h1>Category</h1>
    </section>
    <ul>
        <li>
            <a href="{{ path('district_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <i class="fa fa-edit"></i>
                        <h3 class="box-title">New District</h3>
                    </div>
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ district.id }}</td>
                                </tr>
                                <tr>
                                    <th>Districtnameta</th>
                                    <td>{{ district.districtNameTa }}</td>
                                </tr>
                                <tr>
                                    <th>Districtnameen</th>
                                    <td>{{ district.districtNameEn }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <ul class="record_actions">
                            <li>
                                <a href="{{ path('district_index') }}">Back to the list</a>
                            </li>
                            <li>
                                <a href="{{ path('district_edit', { 'id': district.id }) }}">Edit</a>
                            </li>
                            {#    <li>{{ form(delete_form) }}</li>#}
                        </ul>
                        {#    <!-- Button trigger modal -->#}
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                            Delete Item
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </section>

    {#    <!-- Modal -->#}
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Delete Item</h4>
                </div>
                <div class="modal-body">
                    {{ form(delete_form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    {#                    <button type="button" class="btn btn-primary">Save changes</button>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
